generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())
}

model Board {
  id      Int      @id @default(autoincrement())
  name    String
  columns Column[]
}

model Column {
  id      Int    @id @default(autoincrement())
  name    String
  board   Board  @relation(fields: [boardId], references: [id])
  boardId Int
  tasks   Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      String
  column      Column    @relation(fields: [columnId], references: [id])
  columnId    Int
  subtasks    Subtask[]
}

model Subtask {
  id          Int     @id @default(autoincrement())
  title       String
  isCompleted Boolean
  task        Task    @relation(fields: [taskId], references: [id])
  taskId      Int
}
